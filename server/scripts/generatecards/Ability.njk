    {{/if}}
    gameAction: {{>ability ability=ability.effect}}
});
{{else if ability.name == 'keywords'}}
//Keywords: {{ ability.keywords.join(", ") }}
{{else if ability.name == 'gainAmber'}}
ability.actions.gainAmber((context) => ({
    amount: {{ ability.quantity }},
    {{#if ability.target === 'opponent') }}
    target: context.player.opponent
    {{/if}}
}))
{{else if ability.name == 'stealAmber'}}
    ability.actions.steal((context) => ({
        amount: {{ ability.quantity  }},
        {{#if ability.target === 'opponent'}}
        target: context.player.opponent
        {{/if}}
    }))
{{else if ability.name == 'loseAmber'}}
ability.actions.loseAmber((context) => ({
    amount: {{ ability.quantity }},
    {{#if ability.target !== 'opponent'}}
    target: context.player //{{ ability.target }}
    {{/if}}
}))
