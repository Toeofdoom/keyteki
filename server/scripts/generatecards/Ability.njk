    {{else if ability.trigger == 'Destroyed'}}
this.destroyed({
    {{else if ability.trigger == 'Play'}}
this.play({
    {{else if ability.trigger == 'Omni'}}
this.omni({
    {{else if ability.trigger == 'Before Fight'}}
